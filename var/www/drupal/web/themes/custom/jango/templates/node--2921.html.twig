<script>
document.addEventListener('DOMContentLoaded', () => {
  const overlays = {
    'total': document.getElementById('total-rna-automation-form-overlay'),
    'plant': document.getElementById('plant-total-rna-automation-form-overlay'),
    'saliva': document.getElementById('saliva-total-rna-automation-form-overlay'),
    'stool': document.getElementById('stool-total-rna-automation-form-overlay'),
    'soil': document.getElementById('soil-total-rna-automation-form-overlay'),
    'blood': document.getElementById('blood-total-rna-automation-form-overlay'),
    'pathogen': document.getElementById('pathogen-viral-nucleic-acid-total-rna-automation-form-overlay'),

    'cells-and-tissue': document.getElementById('cells-and-tissue-total-rna-automation-form-overlay')

  };

  function toggleOverlay(name) {
    const target = overlays[name];
    if (target.classList.contains('active')) {
      target.classList.remove('active');
      document.documentElement.classList.remove('scroll-lock');
    } else {
      target.classList.add('active');
      document.documentElement.classList.add('scroll-lock');
    }
  }

  // Close overlay when clicking outside the inner wrapper
  Object.values(overlays).forEach(overlay => {
    overlay.addEventListener('click', function (e) {
      if (e.target === this) {
        this.classList.remove('active');
        // Only remove scroll-lock if no other overlay is open
        const anyStillOpen = Object.values(overlays).some(o => o.classList.contains('active'));
        if (!anyStillOpen) {
          document.documentElement.classList.remove('scroll-lock');
        }
      }
    });
  });

  // Expose toggle functions globally for buttons
  window.toggleStoolAutomationScriptsFormTest = () => toggleOverlay('stool');
  window.toggleSoilAutomationScriptsFormTest = () => toggleOverlay('soil');
  window.toggleBloodAutomationScriptsFormTest = () => toggleOverlay('blood');
  window.togglePathogenAutomationScriptsFormTest = () => toggleOverlay('pathogen');

  window.toggleCellsAndTissueAutomationScriptsFormTest = () => toggleOverlay('cells-and-tissue');

  window.toggleAutomationScriptsFormTest = () => toggleOverlay('total');
  window.togglePlantAutomationScriptsFormTest = () => toggleOverlay('plant');
  window.toggleSalivaAutomationScriptsFormTest = () => toggleOverlay('saliva');

});
</script>


<script>
  document.addEventListener("DOMContentLoaded", function () {
    const track = document.querySelector('.fig-carousel-track');
    const slides = Array.from(track.children);
    const prevButton = document.querySelector('.fig-prev');
    const nextButton = document.querySelector('.fig-next');
    const mainImages = document.querySelectorAll('.fig-slide img');
    const lightbox = document.getElementById('lightbox');
    const lightboxImage = lightbox.querySelector('.lightbox-image');
    const lightboxCaption = lightbox.querySelector('.lightbox-caption p');
    const lightboxClose = lightbox.querySelector('.lightbox-close');
    const lightboxPrev = lightbox.querySelector('.lightbox-prev');
    const lightboxNext = lightbox.querySelector('.lightbox-next');

    let carouselIndex = 0;
    let lightboxIndex = 0;

    function updateCarousel() {
      const slideWidth = slides[0].getBoundingClientRect().width;
      track.style.transform = `translateX(${-carouselIndex * slideWidth}px)`;
    }

    nextButton.addEventListener('click', () => {
      carouselIndex = (carouselIndex + 1) % slides.length;
      updateCarousel();
    });

    prevButton.addEventListener('click', () => {
      carouselIndex = (carouselIndex - 1 + slides.length) % slides.length;
      updateCarousel();
    });

    function updateLightbox() {
      const slide = slides[lightboxIndex];
      const img = slide.querySelector('img');
      const caption = slide.querySelector('.fig-caption').innerHTML;
      lightboxImage.src = img.src;
      lightboxCaption.innerHTML = caption;
    }

    mainImages.forEach((img, index) => {
      img.addEventListener('click', () => {
        lightboxIndex = index;
        carouselIndex = index;
        updateCarousel();
        updateLightbox();
        lightbox.style.display = 'flex';
      });
    });

    lightboxClose.addEventListener('click', () => {
      lightbox.style.display = 'none';
    });

    lightboxPrev.addEventListener('click', () => {
      lightboxIndex = (lightboxIndex - 1 + slides.length) % slides.length;
      updateLightbox();
      carouselIndex = lightboxIndex;
      updateCarousel();
    });

    lightboxNext.addEventListener('click', () => {
      lightboxIndex = (lightboxIndex + 1) % slides.length;
      updateLightbox();
      carouselIndex = lightboxIndex;
      updateCarousel();
    });

    lightbox.addEventListener('click', (e) => {
      if (e.target === lightbox) {
        lightbox.style.display = 'none';
      }
    });

    document.addEventListener('keydown', (e) => {
      if (lightbox.style.display === 'flex') {
        if (e.key === 'Escape') {
          lightbox.style.display = 'none';
        } else if (e.key === 'ArrowLeft') {
          lightboxPrev.click();
        } else if (e.key === 'ArrowRight') {
          lightboxNext.click();
        }
      }
    });
  });
</script>